<% provide(:title, 'Twibot | tweet') %>
<h4>Create Tweet</h4>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div><p id="num">0</p></div>
    <%= form_with model: @tweet, url: tweets_path, method: :post, local: true do |f| %>
      <%= f.text_field :content, class: "textbox", maxlength: 140 %>
      <%= f.submit '送信', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>