<!DOCTYPE html>
<html>
  <head>
    <%= render partial: "layouts/gtag" %>
    <title><%= yield(:title).presence || "Twi_bot" %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= render partial: "layouts/js_cdn" %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= render partial: "layouts/css_cdn" %>
  </head>

  <body class="<%= controller_name %> <%= action_name %>">

  <!-- header -->
  <div class="container">
    <div class="header clearfix">
      <nav>
        <ul class="nav nav-pills float-right">
          <li class="nav-item">
            <a class="nav-link active" href="#">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">About</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Contact</a>
          </li>
        </ul>
      </nav>
      <h3 class="text-muted">Twibot</h3>
    </div>

    <%= yield %>

    <footer class="footer">
      <p>Twibot<i class="far fa-smile"></i>2018</p>
    </footer>

  </div>


  </body>
</html>
